<%= button_to "Find Top Rated Movies", movies_path, method: :get %>

<%= form_with url: movies_path, local: true, method: :get do |form| %>
  <%= form.label :q, 'Search by movie title:' %>
  <%= form.text_field :q %>
  <%= form.submit 'Find Movies' %>
<% end %>

<% @movies.each do |movie| %>
  <p><%= link_to movie[:title], movie_path(movie[:id]) %> Vote Average: <%= movie[:vote_average] %></p>
<% end %>
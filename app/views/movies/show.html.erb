<div>
  <h1><%= @movie[:title] %></h1>
  <%= button_to "Create Viewing Party for Movie", new_viewing_party_path(@movie), method: :get %>
</div>

<div>
  <p>Vote Average: <%= @movie[:vote_average] %></p>
  <p>Runtime: <%= @movie[:runtime] %></p>

  <p>
    Genre(s):
    <% @movie[:genres].each do |genre| %>
      <%= genre[:name] %>
    <% end %>
  </p>
</div>

<h2>Summary</h2>
<%= @movie[:overview] %>

<h2>Cast</h2>
<% @cast.each do |member| %>
  <p><%= member[:name] %> as <%= member[:character] %></p>
<% end %>

<h2><%= @reviews.count %> Reviews</h2>
<% @reviews.each do |review| %>
  <h3>Author: <%= review[:author] %></h3>
  <%= review[:content] %>
<% end %>